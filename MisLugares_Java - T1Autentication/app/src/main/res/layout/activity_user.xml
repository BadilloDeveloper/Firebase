<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.UserActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginTop="4dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#aac4a4"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:id="@+id/imagenusuario">
        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5px">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ID">
        </androidx.appcompat.widget.AppCompatTextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="usuarioid"
            android:inputType="text"
            android:id="@+id/usuarioid">
        </EditText>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5px">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Nombre">
            </androidx.appcompat.widget.AppCompatTextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:inputType="text"
                android:id="@+id/ussuarionombre">
            </EditText>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5px">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Email">
        </androidx.appcompat.widget.AppCompatTextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="usuarioemail"
            android:inputType="textEmailAddress"
            android:id="@+id/usuarioemail">
        </EditText>

    </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5px">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="TelÃ©fono">
            </androidx.appcompat.widget.AppCompatTextView>
            <EditText

                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="600600600"
                android:id="@+id/usuariotelefono">
            </EditText>



        </androidx.appcompat.widget.LinearLayoutCompat>

        <Button
            android:id="@+id/btnunircuentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unir Cuentas"
            android:textAlignment="center"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>